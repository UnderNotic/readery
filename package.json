{
  "name": "readery",
  "version": "0.0.1",
  "description": "Big file loader in chunks for browser",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run build:umd && npm run build:iife && npm run test:build",
    "test:build": "cross-env NODE_ENV=test rollup --config rollup.config.iife.js && cp ./dist/readery-iife.min.js ./src/tests/",
    "build:umd": "rollup --config rollup.config.umd.js",
    "build:iife": "rollup --config rollup.config.iife.js",
    "test:serve": "http-server ./src/tests/",
    "test": "npm run test:build && npm run test:serve | testcafe chrome **/*.test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UnderNotic/readery.git"
  },
  "keywords": [
    "reader",
    "bigfile",
    "file",
    "chunks",
    "browser"
  ],
  "author": "undernotic",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/UnderNotic/readery/issues"
  },
  "homepage": "https://github.com/UnderNotic/readery#readme",
  "devDependencies": {
    "babel-preset-es2015": "^6.24.1",
    "cross-env": "^5.1.4",
    "http-server": "^0.11.1",
    "rollup": "^0.56.5",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^3.0.0",
    "testcafe": "^0.19.0"
  }
}
